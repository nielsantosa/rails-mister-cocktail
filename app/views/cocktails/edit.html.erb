<div class="container my-3 min-vh-100">
  <div class="row">
    <div class="col-12 col-lg-6 m-auto bg-white p-4 rounded">
      <h1>Edit this cocktail</h1>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Back to List", cocktails_path %>
    </div>
  </div>
</div>
