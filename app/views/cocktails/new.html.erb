<div class="container">
  <div class="row">
    <div class="col-6 m-auto">
      <h1>Add new cocktail</h1>
      <%= simple_form_for @new_cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Back to List", cocktails_path %>
    </div>
  </div>
</div>
